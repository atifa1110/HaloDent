<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HaloDent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorPrimary">#262628</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.BoldWhite">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">20dp</item>-->
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Medium2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/group_background_dark</item>
    </style>

    <style name="Group_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/group_background_dark</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Group_message_bubble">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/group_background_dark</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="message_bubble" parent="CardView.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/bubble_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="message_send">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/send_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.Chat">
        <item name="android:textColor">@color/chat_text_color</item>
    </style>

    <style name="Text.Chat.Name">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextInputEditText_Chat" parent="TextInputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/background_enter_message_dark</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:hint">@string/enter_message</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/chat_text_color</item>
        <item name="android:textColor">@color/chat_text_color</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/send_background</item>
    </style>

    <style name="Text.GroupName">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/send_background</item>
    </style>

    <style name="Text.Skor">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>